<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="1"
    android:background="@drawable/customborder"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="120dp"
        android:layout_weight="0.3">

        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:text="Angoor Jamun"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/productNameTextView"
            android:layout_alignStart="@+id/productNameTextView"
            android:layout_below="@+id/productNameTextView"
            android:layout_marginTop="5dp"
            android:text="1 Set" />


        <ImageView
            android:id="@+id/addProductImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/product_add_icon"
            android:layout_alignTop="@+id/removeProductImageView"
            android:layout_alignRight="@+id/productNameTextView"
            android:layout_alignEnd="@+id/productNameTextView" />

        <TextView
            android:id="@+id/productPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_alignRight="@+id/addProductImageView"
            android:background="@drawable/custombuttom"
            android:text="Button" />

        <TextView
            android:id="@+id/productItemCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/productPriceTextView"
            android:layout_alignBottom="@+id/productPriceTextView"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/addProductImageView"
            android:text="3" />

        <ImageView
            android:id="@+id/removeProductImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView3"
            app:srcCompat="@drawable/minus_product_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/totalProductPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:layout_gravity="right"
             />
    </LinearLayout>


</LinearLayout>